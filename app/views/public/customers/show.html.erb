<h2>マイページ</h2>
<h4>登録情報</h4>
<%= link_to "編集する", customers_edit_path(@customer), class: "btn btn-primary mb-4" %>

<div class="row">
<div class="col-10">
<table class="table table-striped table-bordered bg-light">
    <tbody>
        <tr>
            <th width="20%">氏名</th>
            <td><%= @customer.first_name %> <%= @customer.last_name %></td>
        </tr>
        <tr>
            <th>カナ</th>
            <td><%= @customer.first_name_kana %><%= @customer.last_name_kana %></td>
        </tr>
        <tr>
            <th>郵便番号</th>
            <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
            <th>住所</th>
            <td><%= @customer.address %></td>
        </tr>
        <tr>
            <th>電話番号</th>
            <td><%= @customer.telephone_number %></td>
        </tr>
        <tr>
            <th>メールアドレス</th>
            <td><%= @customer.email %></td>
        </tr>
    </tbody>
</table>

<div class="border-top border-dark mb-3"></div>
<%= link_to "一覧を見る",  addresses_path, class: "text-secondary" %><br>
<%= link_to "一覧を見る", orders_path, class: "text-secondary" %>
</div>
</div>
