<h2 class="text-center">注文情報入力</h2>

<%= form_with url: orders_verification_path, method: :post, local: true do |f| %>
<div class="mx-auto w-50 border rounded bg-white p-3">

  <div class="form-group">
    <div class="lead mb-2">支払い方法</div>
    <%= f.radio_button :payment_method, 0 %>
    クレジットカード
    <%= f.radio_button :payment_method, 1 %>
    銀行振込
    </div>

  <div class="form-group mt-4">
    <div class="lead">お届け先</div>
    <% if current_customer.address %>

        <%= f.radio_button :address_select, 0 %>
        <%= f.label :ご自身の住所 %>
        <%= current_customer.address %>

    <% end %>

      <%= f.radio_button :address_select, 1 %>
      <%= f.label :登録済住所から選択 %><br>
      <%= f.collection_select(:address_id, @addresses, :id, :address) %>
    </div>

    <div><%= f.radio_button :address_select, 2 %>  新しいお届け先</div>

    <div class="form-group has-icon">
      <%= f.label :"郵便番号(ハイフンなし)" %>
      <%= f.text_field :postal_code, class:"form-control" %>
    </div>
    <div class="form-group has-icon">
      <%= f.label :住所 %>
      <%= f.text_field :address, class:"form-control" %>
    </div>
    <div class="form-group has-icon">
      <%= f.label :宛名 %>
      <%= f.text_field :name, class:"form-control" %>
    </div>
  </div>

    <%= f.submit "確認画面へ進む", class:"btn btn-primary btn-block btn-base-1 mt-20" %>
  <% end %>
