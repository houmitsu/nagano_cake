 <h2>注文情報確認</h2>

 <% sum = 0 %>

  <% @cart_items.each do |cart_item| %>
      <div class="cartitem-area clearfix border-bottom border-dark p-3">
        <div class="cartitem-figure float-left" style="width:35%">
          <%= attachment_image_tag cart_item.item, :image %>
        </div>
        <div class="cartitem-description float-right" style="width:60%">
          <h4 class="cartitem-name p-3">
            <%= cart_item.item.name %>
          </h4>
          <table class="table">
            <tr>
              <th>単価</th>
              <th>数量</th>
              <th>小計</th>
            </tr>
            <tr>
              <td><%= cart_item.item.excluding_tax_price %></td>
              <td><%= cart_item.amount %></td>
              <td><%= cart_item.item.excluding_tax_price * cart_item.amount %></td>
            </tr>
          </table>
        </div>
      </div>
      <% sum += cart_item.item.excluding_tax_price * cart_item.amount %>
    <% end %>

    <%= form_with model: @order, url: orders_path, local: true do |f| %>
    <%= f.hidden_field :address, :value => @order.address %>
    <%= f.hidden_field :name, :value => @order.name %>
    <%= f.hidden_field :total_payment, :value => sum %>
    <%= f.hidden_field :shipping_cost, :value => @order.shipping_cost %>
    <%= f.hidden_field :status, :value => @order.status %>
    <%= f.hidden_field :postal_code, :value => @order.postal_code %>
    <%= f.hidden_field :payment_method, :value => @order.payment_method %>
    <%= f.submit "注文を確定する", class: "btn btn-primary mt-3" %>
    <% end %>
