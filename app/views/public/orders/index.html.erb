<h2>注文履歴一覧</h2>

<table class="table">
<tr>
  <th>注文日</th>
  <th>配送先</th>
  <th>注文商品</th>
  <th>支払金額</th>
  <th>ステータス</th>
  <th>注文詳細</th>
</tr>

<% @orders.each do |order| %>
  <tr>
    <td><%= @order.created_at %></td>
    <td><%= @order.address %></td>
    <td><%= @order.name %></td>
    <td><%= @order.excluding_tax_price %></td>
    <td><%= @order.status %></td>
    <td><%= link_to "表示する", order_path, class: "btn btn-primary mt-3" %></td>
  </tr>
<% end %>
</table>
