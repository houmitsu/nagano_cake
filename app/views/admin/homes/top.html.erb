<h1>注文履歴一覧</h1>


<table border="1">
        <thead>
            <tr>
                <th>購入日時</th>
                <th>購入者</th>
                <th>注文個数</th>
                <th>注文ステータス</th>
            </tr>
        </thead>
        <tbody>
        <% @orders.each do |order| %>
  　　　　　<tr>
            <td><%= link_to order.created_at, admin_order_path(order) %></td>
            <td><%= order.customer.last_name %><%= order.customer.first_name %></td>
            <% @order_details = 0 %>
            <% order.order_details.each do |order_detail| %>
            <% @order_details += order_detail.amount %>
            <% end %>
            <td><%= @order_details %></td>
            <td><%= order.status %></td>
          </tr>
　　　　　<% end %>
        </tbody>
    </table>
