<div class="row">
    <div class="col-xs-10 col-xs-offset-1">
      <h2>会員一覧</h2>

      <table class="table">
        <thead>
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>

        <tbody>
          <% @customers.each do |customer| %>
            <tr>
              <td><%= link_to customer.id, admin_customer_path(customer) %></td>
              <td><%= customer.last_name %><%= customer.first_name %></td>
              <td><%= customer.email %></td>
              <td>
                <% if customer.is_deleted == false %>
                有効
                <% else %>
                退会済み
                <% end %>
              </td>
            </tr>
            <% end %>

        </tbody>
      </table>
    </div>
  </div>