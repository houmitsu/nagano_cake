<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <header>
   <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
      <%= link_to "ながのCAKE", root_path, class: "navbar-brand" %>

      <ul class="navbar-nav nav justify-content-end mr-sm-2">
        <% if admin_signed_in? %>
          <li class="nav-item">
            <%= link_to "商品一覧", admin_items_path %>
          </li>
          <li class="nav-item">
            <%= link_to "会員一覧", admin_customers_path %>
          </li>
          <li class="nav-item">
            <%= link_to "注文履歴一覧", admin_root_path %>
          </li>
          <li class="nav-item">
            <%= link_to "ジャンル一覧", admin_genres_path %>
          </li>
          <li class="nav-item">
            <%= link_to "ログアウト", destroy_admin_session_path, method: :delete %>
          </li>

        <% elsif customer_signed_in? %>
        <li class="nav-item">
            <%= link_to "マイページ", customers_path %>
          </li>
          <li class="nav-item">
            <%= link_to "商品一覧", items_path %>
          </li>
          <li class="nav-item">
            <%= link_to "カート", cart_items_path %>
          </li>
          <li class="nav-item">
            <%= link_to "ログアウト", destroy_customer_session_path, method: :delete %>
          </li>

        <% else %>
          <li class="nav-item">
            <%= link_to "About", about_path %>
          </li>
          <li class="nav-item">
            <%= link_to "商品一覧", items_path %>
          </li>
          <li class="nav-item">
            <%= link_to "新規登録", new_customer_registration_path %>
          </li>
          <li class="nav-item">
            <%= link_to "ログイン", new_customer_session_path %>
          </li>
        <% end %>
      </ul>
      </div>
    </nav>
  </header>

  <body>
    <%= yield %>
  </body>
</html>
